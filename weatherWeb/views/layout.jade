include mixins

doctype
html( lang="en" )
    head
        title WeatherWeb
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='Baking Bootstrap Snippets with Jade' )
        //- Bootswatch Theme
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
        link(rel='stylesheet', href='css/styles.css')
        link(rel='stylesheet', href='css/weather-icons.css')
        link(rel='stylesheet', href='css/weather-icons-wind.css')
    body(style="padding-bottom:10rem;")
        .container
 
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
        
        +nav("Weather Web", "dropdown_menu")
          +nav_item( "/", "active" ) Home
          +nav_item( "/about" ) About
          +nav_item_dropdown( "#" )( label="History" )
            +nav_item( "/temphistory" ) Temperature
            +nav_item( "/pressurehistory" ) Pressure
            +nav_item( "/humidityhistory" ) Humidity
            
        block content